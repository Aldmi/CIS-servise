                                        ItemsSource="{Binding Path=ListOfStops, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                        <ListView.View>
                                            <GridView>
                                                <GridView.Columns>
                                                    <GridViewColumn
