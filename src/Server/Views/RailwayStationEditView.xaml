                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <DatePickerTextBox Text="{Binding Path=DepartureTime, StringFormat={}{0:HH:mm:ss}}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>


                    <DataGridTemplateColumn Header="Время прибытия">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=ArrivalTime, StringFormat=\{0:HH:mm:ss\}}" />
